# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
tab_width = 4

[*.java]
max_line_length = 100

[*.md]
tab_width = 4
indent_size = 4
