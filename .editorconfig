# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space
indent_size = 2
tab_width = 2

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[*.{toml,yaml,yml}]
indent_style = space
indent_size = 2

[*.{py,java,c}]
max_line_length = 120
indent_size = 4
tab_width = 4

[*.md]
tab_width = 4
indent_size = 4
